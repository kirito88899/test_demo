<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"

    >


    <TextView
        android:id="@+id/Rank"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />


    <ImageView
        android:id="@+id/tv_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/back_img0"
        app:layout_constraintBottom_toBottomOf="@+id/Rank"
        app:layout_constraintStart_toEndOf="@+id/Rank"
        app:layout_constraintTop_toTopOf="@+id/Rank" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="安装"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="QQ"
        app:layout_constraintStart_toEndOf="@+id/tv_image"
        app:layout_constraintTop_toTopOf="@+id/tv_image" />

    <TextView
        android:id="@+id/Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="56.79MB"
        app:layout_constraintBottom_toTopOf="@+id/Download"
        app:layout_constraintStart_toEndOf="@+id/tv_image"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <TextView
        android:id="@+id/Download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="18亿"
        app:layout_constraintBottom_toBottomOf="@+id/tv_image"
        app:layout_constraintStart_toEndOf="@+id/tv_image" />

</androidx.constraintlayout.widget.ConstraintLayout>